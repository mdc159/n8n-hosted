# Required secrets
N8N_ENCRYPTION_KEY=replace-with-random-32-chars
N8N_USER_MANAGEMENT_JWT_SECRET=replace-with-random-32-chars

# Domain / HTTPS
N8N_HOST=n8n.pimpshizzle.com
WEBHOOK_URL=https://n8n.pimpshizzle.com/
CADDY_EMAIL=you@example.com
TZ=UTC

# Caddy basic auth (option A)
BASIC_AUTH_USER=admin
# Generate hash: caddy hash-password --plaintext 'YourStrongPassword'
BASIC_AUTH_HASH=replace-with-bcrypt-hash

# Optional n8n settings
#N8N_BASIC_AUTH_ACTIVE=true
#N8N_BASIC_AUTH_USER=
#N8N_BASIC_AUTH_PASSWORD=
#N8N_LOG_LEVEL=info

# MCP authentication (required - generate a random token)
# Generate with: openssl rand -hex 32
MCP_AUTH_TOKEN=replace-with-random-token

# MCP management tools (optional - enables workflow/node management via Claude Code)
# To enable:
#   1. Log into n8n web UI
#   2. Navigate to Settings (gear icon) > n8n API
#   3. Click "Create API Key"
#   4. Copy the generated key below
#N8N_API_URL=http://n8n:5678
#N8N_API_KEY=your-n8n-api-key-here

