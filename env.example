# Required secrets
N8N_ENCRYPTION_KEY=replace-with-random-32-chars
N8N_USER_MANAGEMENT_JWT_SECRET=replace-with-random-32-chars

# Domain / HTTPS
N8N_HOST=n8n.pimpshizzle.com
WEBHOOK_URL=https://n8n.pimpshizzle.com/
CADDY_EMAIL=you@example.com
TZ=UTC

# Caddy basic auth (option A)
BASIC_AUTH_USER=admin
# Generate hash: caddy hash-password --plaintext 'YourStrongPassword'
BASIC_AUTH_HASH=replace-with-bcrypt-hash

# Optional n8n settings
#N8N_BASIC_AUTH_ACTIVE=true
#N8N_BASIC_AUTH_USER=
#N8N_BASIC_AUTH_PASSWORD=
#N8N_LOG_LEVEL=info

# Optional MCP management (only if you want MCP to manage n8n)
#N8N_API_URL=http://n8n:5678
#N8N_API_KEY=

